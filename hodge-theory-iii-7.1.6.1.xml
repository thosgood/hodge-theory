  <fr:mainmatter>
    <fr:tex display="block"><![CDATA[         \begin {aligned}           \delta (W,L)_n(\mathrm {s} K)           &= \bigoplus _{p,q} W_{n+p}(K^{p,q})         \\&= \sum _p \mathrm {s}(W_{n+p}(K)) \cap  L^p(\mathrm {s} K).         \end {aligned}       \tag{7.1.6.1}       ]]></fr:tex>
  </fr:mainmatter>
  <fr:backmatter>
    <fr:tree toc="false" numbered="false" show-heading="true" show-metadata="false" expanded="true" root="false" xmlns:fr="http://www.jonmsterling.com/jms-005P.xml">
